.nav-bar .nav-item {
    display: inline-block;
    width: 150rpx;
    height: 90rpx;
    text-align: center;
    line-height: 90rpx;
    font-size: 30rpx;
    color: #303133;
    position: relative;
}
.nav-bar .nav-item:after {
      content: '';
      width: 0;
      height: 0;
      border-bottom: 4rpx solid #007aff;
      position: absolute;
      left: 50%;
      bottom: 0;
      -webkit-transform: translateX(-50%);
          -ms-transform: translateX(-50%);
              transform: translateX(-50%);
      -webkit-transition: .3s;
      -o-transition: .3s;
      transition: .3s;
}
.nav-bar .current {
    color: #007aff;
}
.nav-bar .current:after {
      width: 50%;
}
